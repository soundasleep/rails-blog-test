
<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
	<blockquote>
		<h2><%= pluralize(@post.errors.count, "error") %> were found:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</blockquote>
	<% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

 	<p>
 		<%= f.label :allow_comments %><br>
 		<%= f.check_box :allow_comments, { checked: true } %>
 	</p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
